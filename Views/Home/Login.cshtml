@using NeYemekYapsam.Entities.ValueObjects
@model LoginViewModel


@{

	ViewBag.Title = "Giriş Sayfası";
}
@*<link href="~/Content/shop-homepage.css" rel="stylesheet" />*@

<link href="~/Content/login-register.css" rel="stylesheet" />
<link href="~/Content/validation-Summary.css" rel="stylesheet" />

@using (Html.BeginForm())
{
	<br /><br /><br /><br />
	<div class="container">



		<div class="row">
			<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

				<form>
					<div class="panel panel-default">
						<div class="panel-heading text-center">
							<h2>Giriş Yap</h2>
							@Html.ValidationSummary(false)
							@*@if (ViewBag.SetLink!=null)
								{
									<a href="@ViewBag.SetLink" class="btn btn-success">Activate</a>
								}*@
						</div>

						
							<div class="panel-body">


								<div class="form-group">

									@Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı Adınız", autofocus = "autofocus" })
								</div>

								<div class="form-group">
									@Html.TextBoxFor(model => model.Password, new { @class = "form-control", placeholder = "Şifreniz", type = "password" })
								</div>

							</div>
						
						<div class="panel-footer text-right">


							<button type="submit" class="btn btn-danger" href="ForgotPassword.html">
								<span class="glyphicon glyphicon-asterisk"></span> Şifremi Unuttum
							</button>

							<button type="submit" class="btn btn-success">
								<span class="glyphicon glyphicon-log-in"></span> Giriş Yap
							</button>

						</div>
					</div>
				</form>

			</div>
		</div>
	</div>


}











