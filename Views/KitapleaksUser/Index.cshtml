@model IEnumerable<NeYemekYapsam.Entities.NeYemekYapsamUser>

@{
	ViewBag.Title = "Index";
}


<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<h2>Kullanıcılar</h2>
		<hr />
	</div>
</div>
<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<p>
			@MyBootstrap.LinkButton("/KitapleaksUser/Create", "primary", string.Empty, string.Empty, "plus", "Kullanıcı Oluştur")
		</p>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Name)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Surname)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Username)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Email)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Password)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsActive)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.IsAdmin)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.CreatedOn)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ModifiedOn)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.ModifiedUsername)
				</th>
				<th></th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Surname)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Username)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Email)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Password)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsActive)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.IsAdmin)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.CreatedOn)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ModifiedOn)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.ModifiedUsername)
					</td>
					<td width="100">
						@MyBootstrap.LinkButton("/KitapleaksUser/Edit/" + item.ID, "warning", "btn-xs", "Düzenle", "edit", string.Empty)

						@MyBootstrap.LinkButton("/KitapleaksUser/Details/" + item.ID, "info", "btn-xs", "Detay", "search", string.Empty)

						@MyBootstrap.LinkButton("/KitapleaksUser/Delete/" + item.ID, "danger", "btn-xs", "Sil", "trash", string.Empty)

					</td>
				</tr>
			}

		</table>
</div>
</div>